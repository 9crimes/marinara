{
  "name": "Pomo",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Pomodoro time management assistant.",
  "author": "Chris Schmich <schmch@gmail.com>",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "notifications"
  ],
  "browser_action": {
    "default_title": "Pomo",
    "default_icon": "icon-bw.png"
  },
  "background": {
    "persistent": true,
    "scripts": ["lib/EventEmitter.min.js", "background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "64": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
