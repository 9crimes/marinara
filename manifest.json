{
  "name": "Marinara",
  "short_name": "Marinara",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Pomodoro time management assistant.",
  "author": "Chris Schmich <schmch@gmail.com>",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "notifications"
  ],
  "browser_action": {
    "default_title": "Marinara",
    "default_icon": "icons/browser-action.png"
  },
  "background": {
    "persistent": true,
    "scripts": ["lib/EventEmitter.min.js", "background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "icons": {
    "16": "icons/128.png",
    "32": "icons/128.png",
    "64": "icons/128.png",
    "128": "icons/128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
